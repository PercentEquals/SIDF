<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Simple Image Duplicate Finder" 
        Height="600" Width="1200"
        MinHeight="450" MinWidth="800">
    
    <DockPanel Margin="10px">

        <Grid DockPanel.Dock="Top">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180px" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="125px" />
            </Grid.ColumnDefinitions>

            <Button Name="DirButton" Grid.Column="0" Cursor="Hand" Click="DirButton_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:FontAwesome Icon="Folder" Margin="0 3 5 0"/>
                    <TextBlock>Choose Directory</TextBlock>
                </StackPanel>
            </Button>

            <Label Name="DirLabel" Content="No folder selected." Grid.Column="1" BorderBrush="Black" BorderThickness="0,1" />
            
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1">
                <Button Name="CmpButton" IsEnabled="False" Cursor="Hand" BorderThickness="0" Click="CmpButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Start Searching</TextBlock>
                        <fa:FontAwesome Icon="Search" Margin="5 3 0 0"/>
                    </StackPanel>
                </Button>
            </Border>
            

        </Grid>

        <Grid Margin="0 10 0 10" Height="23" DockPanel.Dock="Top">
            <ProgressBar Name="Progress" Value="0" />
            <TextBlock Name="ProgressLabel" TextAlignment="Center" Margin="0,2,0,0" FontSize="14"></TextBlock>
        </Grid>

        <TextBlock Name="ResultBox" Text="" />

        <TreeView Name="ImageView" DockPanel.Dock="Top">
            <TreeView.Resources>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>

                                <DockPanel Margin="10px">
                                    <Image Source="{Binding}" MaxHeight="200px"></Image>
                                </DockPanel>
                                
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TreeView.Resources>
        </TreeView>


    </DockPanel>
    
</Window>
